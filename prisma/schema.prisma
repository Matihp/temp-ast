generator client {
  provider   = "prisma-client-js"
  engineType = "client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique 
  createdAt DateTime @default(now())
  apiKeys   ApiKey[]
  aiJobs    AiJob[]
  subscriptions Subscription[]
}

model ApiKey {
  id        String   @id @default(uuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  key       String   @unique
  createdAt DateTime @default(now())
  active    Boolean  @default(true)
}

model Plan {
  id        String   @id @default(uuid())
  name      String
  priceId   String   @unique
  createdAt DateTime @default(now())
}

model Subscription {
  id        String   @id @default(uuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  plan      Plan     @relation(fields: [planId], references: [id])
  planId    String
  status    String
  createdAt DateTime @default(now())
}

model Invoice {
  id          String   @id @default(uuid())
  subscription Subscription @relation(fields: [subscriptionId], references: [id])
  subscriptionId String
  total       Int
  currency    String
  issuedAt    DateTime @default(now())
}

model UsageEvent {
  id        String   @id @default(uuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  provider  String
  tokens    Int
  costCents Int
  createdAt DateTime @default(now())
}

model AiJob {
  id        String   @id @default(uuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  provider  String
  type      String
  status    String
  createdAt DateTime @default(now())
  result    AiResult?
}

model AiResult {
  id       String  @id @default(uuid())
  job      AiJob   @relation(fields: [jobId], references: [id])
  jobId    String  @unique
  output   String
  metadata Json
}
