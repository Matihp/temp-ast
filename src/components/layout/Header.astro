---
import ThemeToggle from '../toggle/ThemeToggle.astro';
import LoginButton from '../auth/LoginButton';

interface Props {
  locale?: string;
}

const { locale = 'es' } = Astro.props;
---

<header class="border-b border-gray-200 dark:border-gray-800 bg-white dark:bg-gray-950 sticky top-0 z-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between h-16">
      <div class="flex items-center">
        <a href={`/${locale}`} class="text-xl font-bold text-gray-900 dark:text-white">
          AsCloud
        </a>
      </div>
      <div class="flex items-center gap-4">
        <ThemeToggle />
        <LoginButton client:load />
      </div>
    </div>
  </div>
</header>
